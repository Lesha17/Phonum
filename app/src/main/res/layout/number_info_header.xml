<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/info_tittle_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/call_button"
                android:src="@drawable/phone"
                android:background="@null"
                android:scaleType="fitCenter"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/big_button_margin"
                android:layout_marginRight="@dimen/big_button_margin"
                android:paddingRight="5dp"
                android:layout_width="@dimen/big_button_size"
                android:layout_height="@dimen/big_button_size" />

            <ImageButton
                android:id="@+id/send_sms_button"
                android:src="@drawable/send_sms"
                android:background="@null"
                android:scaleType="fitCenter"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/big_button_margin"
                android:layout_marginRight="@dimen/big_button_margin"
                android:layout_width="@dimen/big_button_size"
                android:layout_height="@dimen/big_button_size" />

            <TextView
                android:id="@+id/display_name"
                android:text="Fuck"
                android:textColor="@color/abc_primary_text_material_light"
                android:textSize="@dimen/display_name_textsize"
                android:layout_toRightOf="@id/call_button"
                android:layout_toLeftOf="@id/send_sms_button"
                android:singleLine="true"
                android:scrollHorizontally="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/phone_number"
                android:textSize="@dimen/phone_number_textsize"
                android:textColor="@color/secondary_text_default_material_light"
                android:layout_toRightOf="@id/call_button"
                android:layout_toLeftOf="@id/send_sms_button"
                android:layout_below="@id/display_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <TextView
            android:id="@+id/category"
            android:layout_below="@id/info_tittle_block"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:background="@drawable/category_background"
            android:textColor="@color/abc_primary_text_material_dark"
            android:text="Без категории"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/hint"
            android:text="fuck you"
            android:clickable="true"
            android:editable="true"
            android:textColor="@color/secondary_text_default_material_light"
            android:background="@drawable/border"
            android:layout_below="@id/category"
            android:layout_marginTop="@dimen/hint_margin_top_bottom"
            android:layout_marginBottom="@dimen/hint_margin_top_bottom"
            android:layout_marginLeft="@dimen/hint_margin_left_right"
            android:layout_marginRight="@dimen/hint_margin_left_right"
            android:padding="@dimen/hint_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/hint_min_height" />


</RelativeLayout>